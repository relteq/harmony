<% content_for :config_sidebar do %>
  <%= render :partial => 'configurations/config_sidebar' %>
<% end %>
<div>	
	<span>	<%= link_to_function(l(:label_new) + " " + l(:label_capacity_profile_set), visual_effect(:toggle_slide, :newscenario), :class => "icon icon-add" )%></span> | 
	<span><%= link_to(l(:label_delete_all_header),delete_all_project_configuration_capacity_profile_sets_path(@project),:confirm => l(:label_delete_all)) %></span> 
</div>
<div id="newscenario" style="display:none">
	<div class="newscenario">
	<% form_tag(new_project_configuration_capacity_profile_set_path(@project),:method => :get) do %>
	<label><%= l(:label_name) %>:</label>
	<%= text_field_tag 'capacity_profile_set[name]', params[:name], :size => 30 %>
	<%= submit_tag l(:button_create_and_configure) , :class => "small", :name => nil %>
	<% end %>
	</div>
</div>

<br/>
<div class="autoscroll">
<table class="index list"> 
	<thead>
	  <tr>
			<%= sort_header_tag('name', :caption => l(:field_name),:default_order => 'desc') %>
			<%= sort_header_tag('updated_at', :caption => l(:label_last_modified_index),:default_order => 'desc') %>
	    <th title=<%= l(:label_sort_by) + " " + l(:label_modified_by_index) %>><%= l(:label_modified_by_index) %></th>
			<th title=<%= l(:label_actions) %>>&nbsp;</th>
	  </tr>
	</thead>
	<tbody>
 <% if @item_count == 0 %>
	<tr>
	<td colspan='4' ><%= l(:label_no_records_index) %></td>
	</tr>
<% end %>
<% @items_show.each_with_index do |cps,i| %>
  <tr class="user active <%= i%2==0 ? 'odd' : 'even' %>">
	<td  ><%= link_to cps.name, edit_project_configuration_capacity_profile_set_path(@project, cps) %></td>
 	<td  ><%=h format_date_time(cps.updated_at) %></td>
 	<td  >Not Implemented</td>
	<td  class="index-menu-td"> <span class="index-menu" id="config-index-capacity-profile-set-<%= cps.id %>"></span></td>

  </tr>
<% end %>
   </tbody>

</table>
</div>
<p class="pagination"><%= pagination_links_full @item_pages, @item_count %></p>

<br />
<script language="javascript">
	leaf_menus = <%= all_leaf_menu_items(@project,'index' ,{:capacity_profile_sets => @items_show}) %>;
	hook_leaf_menus(leaf_menus);	
</script>

