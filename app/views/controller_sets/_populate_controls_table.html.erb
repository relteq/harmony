<p><label><%= l(:label_controllers) %></label></p>
<table class="form_table list"> 
	<thead>
	  <tr>
			<% if(@items != nil && @items.size() != 0) %>
				<%= sort_header_tag_relteq('controller_type', {:url => ptable_project_configuration_controller_set_path(@project, @cset),:caption => l(:field_type),:default_order => 'desc'}) %>
			<% else %>
				<th title=<%= l(:label_name) %>><%= l(:field_name) %></th>
			<% end %>
			
	    <th title=<%= l(:label_network_element) %>><%= l(:label_network_element) %></th>
	    <th title=<%= l(:label_invocation_period) %>><%= l(:label_invocation_period) %></th>
			<th title=<%= l(:label_actions) %>>&nbsp;</th>
	  </tr>
	</thead>
	<tbody id="controllers_table_body">
			<% if @items == nil ||  @items.count == 0 %>
		  <tr>
		    <td colspan='4' ><%= l(:label_no_records_index)%></td>
			</tr>
		<% else %>
		<% @items.each_with_index do |item,i| %>
		  	<tr class="user active <%= i%2==0 ? 'odd' : 'even' %>">
					<td><%=h item.controller_type %></td>
		 			<td><%=h item.controller_name %></td>
		 			<td><%= h item.display_time_from_string(item.dt) %></td>
					<td><%= link_to '','' , :class => 'icon icon-del' %></td>		
		  	</tr>
			<% end %>
		<% end %>
  
   </tbody>
</table>
<p class="pagination">
	<% if(@items != nil) %>
    <%= pagination_links_full @items_pages, @item_count %>
	<% end %>
</p>