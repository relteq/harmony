<%= error_messages_for 'cset' %>
<div class="box tabular">
<%= f.hidden_field :project_id, :value => @project.id %>

<p><%= f.text_field :name, :required => true %></p>
<p><%= f.text_field :description %></p>
<p><label><%=l(:label_network)%><span class='required'> *</span></label><%= collection_select :controller_set, :network_id, @networks, :id, :name,{:prompt => @prompt_network, :selected => @cset.network_id} ,{:onchange => remote_function(:url =>{ :controller => 'controller_sets',  :action => 'populate_controls_table', :project_id =>@project,:controller_set_id =>@cset }, :with =>'Form.Element.serialize(this)' , :method => :get)}  %></p>

<br/>
<div id="controllers_table" class="autoscroll">
	<%= render :partial => 'populate_controls_table' %>
</div>
</div>
