<% content_for :config_sidebar do %>
  <%= render :partial => 'configurations/config_sidebar', :locals => {:highlighted_item => @cset} %>
<% end %>

<h2><%= link_to l(:field_controller_set) + "s", project_configuration_controller_sets_path(@project) %> &#187; <%= l(:controller_sets_edit) %></h2>

<% labelled_tabular_form_for :controller_set, @cset, :url => {:action => "update" }, :html => { :method => :put } do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<p>
		<%= submit_tag l(:button_update) %>
	</p>
<% end %>

<%= render :partial => 'layouts/scenario_list', :locals => {:record =>  @cset}  %>

