<% content_for :config_sidebar do %>
  <%= render :partial => 'configurations/config_sidebar', :locals => {:highlighted_item => @network} %>
<% end %>

<h2><%= link_to "Networks", project_configuration_networks_path(@project), :class => 'config-header'  %> &#187; <%= "Edit Network"%></h2>

<% labelled_tabular_form_for :network, @network, :url => {:controller => "networks", :action => "update" }, :html => { :method => :put } do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<p>
		<%= submit_tag l(:button_update) %>
	</p>
<% end %>

<%= render :partial => 'layouts/scenario_list', :locals => {:record =>  @network}  %>

