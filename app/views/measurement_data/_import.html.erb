<% form_for :measurement_data, :url => import_project_measurement_data_path(@project), :html => {:method => :put} do |f| %>
	<p>
		<label><%= l(:field_name) %>:<span class='required'>*</span></label>
		<%= f.text_field :name %>
	</p>
	<p>
		<label><%= l(:field_file_type) %>:<span class='required'>&nbsp;</span></label>
		<%= f.select :file_type, options_for_select(measurement_data_file_type_of_select_options()) %>
	</p>
	<p>
		<label><%= l(:field_file_format) %>:<span class='required'>*</span></label>
		<%= f.text_field :file_format, :value => l(:measurement_data_default_file_format) %>
	</p>
	<p>
		<label><%= l(:field_file_upload) %>:<span class='required'>*</span></label>
		<%= s3_swf_upload_tag :initial_message => 'Select a Measurement Data file to upload', 
	                      :width => 500, 
	                      :height => 40, 
												:upload_link => 'false'
	 %>
	</p>
	<p><%= f.submit 'Upload Data File', :onclick => "s3_swf#{@count}.upload('')" %> </p>
<% end %>
