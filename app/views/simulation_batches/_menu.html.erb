<div class="add-filter">
	<p>
		<label><%=l(:label_actions)%>: </label>
		<%= select_tag 'simulation_batch_action', options_for_select(simulation_batch_select_options()), 	:onchange=> "doAction(this.options[this.selectedIndex].value);"  
		%>
		<span id="sim-not-checked" class='select-error'>Error: Please select at least one simulation before generating a report.</span>
	</p>
</div>

<script>
function doAction(val)
{
	jQuery('#sim-not-checked').css('display','none');
	if(val == 'generate'){
		if(validateAtLeastOneSimChecked()){
			processSimIds();
			resetReportGenForm();
			show_box("report-generator");
		}else{
			jQuery('#sim-not-checked').css('display','inline');
			return;
		}
	}
}
</script>