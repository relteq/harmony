<% content_for :config_sidebar do %>
  <%= render :partial => 'configurations/config_sidebar' %>
<% end %>
<div>	
	<span>	<%= link_to_function(l(:label_new) + " " + l(:label_controller_group), visual_effect(:toggle_slide, :newscenario), :class => "icon icon-add" )%></span> |
	<span><%= link_to("Delete All", :controller => 'configuration_groups', :action => 'delete_all', :project_id => @project,:confirm => 'You are about to delete all your controller groups, are you sure you want to do this?') %></span> |
	<span><a href="">Import Scenario</a></span> |
	<span><a href="">Share All Scenarios</a></span> 
</div>
<div id="newscenario" style=<%= (flash[:error] == nil) ? "display:none" : "display:block" %>>
	<div class="newscenario">
	<% form_tag({:controller => 'controller_groups', :action => 'new', :project_id => @project},:method => :get) do |f|%>
	<label><%= l(:label_name) %>:</label>
	<%= text_field_tag 'controller_group[name]', params[:name], :size => 30 %>
	<%= submit_tag l(:button_create_and_configure) , :class => "small", :name => nil %>
	<% end %>
	</div>
</div>

<br/>
<div class="autoscroll">
<table class="list"> 
	<thead>
	  <tr>
		<%= sort_header_tag('name', :caption => l(:field_name),:default_order => 'desc') %>
	    <th title="Sort by 'Owner'">Owner</th>
		<%= sort_header_tag('updated_at', :caption => "Last Modified",:default_order => 'desc') %>
	    <th title="Sort by 'Modified By'">Modified By</th>
	
	  </tr>
	</thead>
	<tbody>
 <% if @controller_group_count == 0 %>
	<tr>
	<td colspan='4' >No records to display</td>
	</tr>
<% end %>
<% @controller_groups_show.each_with_index do |controller_group,i| %>
  <tr class="user active <%= i%2==0 ? 'odd' : 'even' %>">
	<td  ><%=h controller_group.name %></td>
 	<td  >Not Implemented</td>
 	<td  ><%=h controller_group.updated_at.strftime("%m/%d/%Y") %></td>
 	<td  >Not Implemented</td>
  </tr>
<% end %>
   </tbody>

</table>
</div>
<p class="pagination"><%= pagination_links_full @controller_groups_pages, @controller_group_count %></p>

<br />

