<%= error_messages_for 'scenario' %>
<div class="box tabular">
  <p><%= f.text_field :name, :required => true %></p>
  <p><%= f.text_field :description %></p>

  <p><label><%=l(:label_network)%><span class='required'> *</span></label><%= collection_select :scenario, :network_id, @networks, :id, :name, @prompt_network %></p>
  <p><label><%=l(:label_controller_set)%></label><%= collection_select :scenario,:controller_set_id,@csets,:id,:name, @prompt_controller %></p>
  <p><label><%=l(:label_demand_profile_set)%></label><%= collection_select :scenario,:demand_profile_set_id,@dsets,:id,:name, @prompt_demand %></p>
  <p><label><%=l(:label_capacity_profile_set)%></label><%= collection_select :scenario,:capacity_profile_set_id,@cpsets,:id,:name, @prompt_capacity %></p>
  <p><label><%=l(:label_split_ratio_profile_set)%></label><%= collection_select :scenario,:split_ratio_profile_set_id, @spsets,:id,:name, @prompt_split %></p>
  <p><label><%=l(:label_event_set)%></label><%= collection_select :scenario,:event_set_id, @esets,:id,:name, @prompt_event %></p>
  <p><%= f.select :length_units, @units,{ :index => nil }, :prompt => true %></p>

  <% if controller.action_name != 'new' %>
    <p><%= label_tag :vehicle_types %> <%= select_tag 'scenario[vehicle_types]', options_for_select(@scenario.vehicle_types.map{ |v| [v.short_display, v.id] }), :multiple => true %></p>
    <p><button id="delete_vehicle_type" onclick="vehicle_delete();">Delete One Vehicle Type</button></p>
    <div id="new_vehicle_type_formlet">
      <h4>Add Vehicle Type</h4>
      <p> 
        <%= label_tag 'Name' %>
        <%= text_field_tag 'vehicle_type[name]', 'General', :required => true %> 
        <br/>
        <%= label_tag 'Weight' %>
        <%= text_field_tag 'vehicle_type[weight]', '1.0', :required => true %> 
      </p>
      <p><button id="create_vehicle_type" onclick="vehicle_create();">Add Vehicle Type</button></p>
    </div>
  <% end %>
  <p><%= f.text_field :b_time, :value => @scenario.display_time(:b_time), :required => true %></p>
  <p><%= f.text_field :e_time,  :value => @scenario.display_time(:e_time), :required => true %></p>
  <p><%= f.text_field :dt, :value => @scenario.display_time(:dt), :required => true %></p>
  <%= masked_input_js 'scenario_b_time' %>
  <%= masked_input_js 'scenario_e_time' %>
  <%= masked_input_js 'scenario_dt' %>
</div>
