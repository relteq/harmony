<% content_for :config_sidebar do %>
  <%= render :partial => 'configurations/config_sidebar' %>
<% end %>

<h2><%= link_to "Scenarios", :controller => 'scenarios', :action => 'index' %> &#187; <%= "New Scenario"%></h2>

<% form_for :scenario, @scenario, :url => { :action => "create" }, :html => { :method => :put } do |f| %>
	<%= render :partial => 'form', :locals => { :f => f } %>
	<p>
		<%= submit_tag l(:button_create) %>
		<%= submit_tag l(:button_create_and_continue), :name => 'continue' %>
	</p>
<% end %>




