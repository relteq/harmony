<p><%= label :split_ratio_profile_set, :split_ratio_profile %></p>
<table class="form_table list"> 
	<thead>
	  <tr>
			<% if(@items != nil) %>
			<%= sort_header_tag_relteq('node.name', {:url =>{ :controller => 'split_ratio_profile_sets',  :action => 'populate_splits_table', :project_id =>@project,:split_ratio_profile_set_id =>@srpset },:caption => l(:field_node),:default_order => 'desc'}) %>
			<% else%>
				<th title="Node"><%= l(:field_node) %></th>
			<% end %>
	    <th title="Profile"><%= l(:label_profile) %></th>
	  </tr>
	</thead>
	<tbody id="profiles_table_body">
		<% if @items == nil ||  @items.count == 0 %>
		  <tr>
		    <td colspan='4' ><%= l(:label_no_records_index)%></td>
			</tr>
		<% else %>
			<% @items.each_with_index do |item,i| %>
		  	<tr class="user active <%= i%2==0 ? 'odd' : 'even' %>">
					<td  ><%= check_box_tag "split_ratio_profile_set[split_ratio_profile_ids][]", item.id,@srpset.split_ratio_profiles.include?(item) %>&nbsp;&nbsp;<%=h item.node.name %></td>
		 			<td  ><%= text_field_tag item.id,item.profile %></td>
		  	</tr>
			<% end %>
		<% end %>
  
   </tbody>
</table>
<p class="pagination">
	<% if(@items != nil) %>
		<%= pagination_links_full @items_pages, @item_count %></p>
	<% end %>
</p>
